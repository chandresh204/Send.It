<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SendActivityVideo">

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/video_recyclerView"
            android:clipToPadding="false"
            android:paddingBottom="80dp"
            android:paddingTop="55dp"
            android:layout_height="0dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0">
    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:background="?attr/colorPrimary"
                  android:alpha="0.9"
                  android:id="@+id/video_toolbar"
                  android:layout_height="50dp">

        <ImageView android:layout_width="20dp"
                   android:src="@drawable/back_button"
                   android:onClick="goBack"
                   android:layout_marginRight="10dp"
                   android:layout_marginLeft="10dp"
                   android:layout_gravity="center"
                   android:layout_height="20dp"/>

        <TextView android:layout_width="wrap_content"
                  android:text="Send.it - PDF"
                  android:textSize="@dimen/toolbar_font_size"
                  android:textColor="#FFF"
                  android:textStyle="bold"
                  android:id="@+id/toolbar_text_video"
                  android:layout_weight="1"
                  android:layout_gravity="center_vertical"
                  android:layout_height="wrap_content"/>
        <SearchView android:layout_width="wrap_content"
                    android:id="@+id/video_searchView"
                    android:theme="@style/Theme.AppCompat"
                    android:layout_height="wrap_content"/>

        <ImageView android:layout_width="40dp"
                   android:layout_gravity="center"
                   android:src="@drawable/menu_icon"
                   android:onClick="showPopUpMenu"
                   android:layout_height="40dp"/>
    </LinearLayout>

    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/video_bottom_info"
            android:textColor="#FFF"
            android:alpha="0.9"
            android:background="@drawable/below_bar_background"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />

    <TextView android:layout_width="wrap_content"
              android:id="@+id/no_mediaFound_text"
              android:textColor="@color/colorRed"
              android:textSize="@dimen/toolbar_font_size"
              android:text="@string/nothing_found"
              android:visibility="gone"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="100dp"
              android:layout_height="wrap_content"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/send_icon"
            android:id="@+id/send_selected_video_button"
            android:onClick="sendVideoNow"
            android:alpha="0.9"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/video_bottom_info"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>