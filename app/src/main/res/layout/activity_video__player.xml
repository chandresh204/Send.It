<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="300dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        tools:context=".VideoPlayer">

    <TextView android:layout_width="300dp"
              android:text="Video INfo"
              android:gravity="center"
              android:textStyle="bold"
              android:textColor="#FFF"
              android:id="@+id/video_title_text"
              android:background="?attr/colorPrimary"
              android:layout_height="wrap_content"/>

    <RelativeLayout android:layout_width="300dp"
                    android:layout_height="wrap_content">
        <VideoView android:layout_width="300dp"
                   android:id="@+id/video_view"
                   android:layout_gravity="center"
                   android:layout_height="wrap_content"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:backgroundTint="#FF0000"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:id="@+id/stop_video_play_button"
                android:src="@drawable/cancel_icon"
                android:layout_height="wrap_content"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:src="@drawable/media_play_icon_small"
                android:visibility="gone"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:id="@+id/replay_video_button"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <SeekBar android:layout_width="300dp"
             android:id="@+id/video_seek"
             android:layout_height="wrap_content"/>

    <LinearLayout android:layout_width="300dp"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="00:00"
                  android:layout_marginStart="20dp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/video_playing_time"
                  android:text="11:11"
                  android:gravity="center"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="99:59"
                  android:layout_marginEnd="20dp"
                  android:id="@+id/video_duration"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>