<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_about"
        tools:context=".AboutActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:layout_height="wrap_content">
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/sendit_icon_new_small"
                   android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:textStyle="bold"
                  android:text="Send.It"
                  android:textSize="@dimen/font_size_medium"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:textStyle="italic"
                  android:text="@string/app_version"
                  android:textSize="@dimen/font_size_medium"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:text="Created By: Chandresh204\nThis version is for my friends, family and well wishers."
                  android:gravity="center"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:gravity="center"
                  android:text="This app is created for file sharing over wifi network. Two devices that needs to share files or media with each other must be connected to wifi. You can create your own wifi network by turning on mobile hotspot."
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:textStyle="italic"
                  android:gravity="center"
                  android:text="You can share this APP with anyone by selecting the 'send this app' on start screen.\nPlease send your feedback or suggestions to 204chandresh@gmail.com"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>