<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".AskTheNameAct">

    <chad.orionsoft.sendit.AppTextView android:layout_width="wrap_content"
                                       android:text="Please enter your/device's name: "
                                       android:textSize="@dimen/font_size_medium"
                                       android:gravity="center"
                                       android:textColor="@color/colorBlue"
                                       android:layout_height="wrap_content"
                                       android:layout_margin="5dp"
                                       android:layout_marginStart="8dp"
                                       android:layout_marginEnd="8dp"
                                       android:id="@+id/appTextView"
                                       android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                                       android:layout_marginBottom="15dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Example:John Max"
            android:ems="10"
            android:textColor="@color/colorRed"
            android:layout_gravity="center"
            android:id="@+id/name_editText"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true" app:srcCompat="@drawable/done_button"
            android:id="@+id/fabNameOK"
            android:onClick="setName"
            android:layout_margin="10dp"
            app:backgroundTint="@color/colorBlue"/>


</LinearLayout>