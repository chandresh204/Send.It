<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SendActivitySearch">

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/search_recycler_view"
            android:layout_height="0dp"
            android:scrollbars="vertical"
            android:paddingBottom="90dp"
            android:paddingTop="60dp"
            android:clipToPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout android:layout_width="match_parent"
                  android:background="?attr/colorPrimary"
                  android:orientation="horizontal"
                  android:alpha="0.9"
                  android:layout_height="wrap_content" android:id="@+id/search_toolbar">
        <EditText android:layout_width="wrap_content"
                  android:layout_weight="1"
                  android:layout_gravity="center"
                  android:layout_margin="5dp"
                  android:hint="Enter file name or extension"
                  android:id="@+id/search_edit_text"
                  android:textColor="#FFF"
                  android:textSize="20dp"
                  android:textColorHint="#CCC"
                  android:layout_height="wrap_content"/>
        <ImageView android:layout_width="50dp"
                   android:src="@drawable/search_icon_small"
                   android:layout_margin="5dp"
                   android:onClick="startSearching"
                   android:layout_height="50dp"/>
    </LinearLayout>


    <ProgressBar android:layout_width="match_parent"
                 android:id="@+id/search_progress_bar"
                 android:visibility="gone"
                 android:alpha="0.8"
                 android:layout_height="match_parent"/>

    <TextView android:layout_width="match_parent"
              android:textColor="@color/colorRed"
              android:text="Nothing Found"
              android:visibility="gone"
              android:gravity="center"
              android:textSize="20dp"
              android:layout_marginTop="20dp"
              app:layout_constraintTop_toBottomOf="@+id/search_toolbar"
              android:id="@+id/nothing_found_in_search_text"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="match_parent"
              android:background="@drawable/below_bar_background"
              android:text="Text"
              android:gravity="center"
              android:alpha="0.9"
              android:textColor="#FFF"
              android:id="@+id/search_bottom_info"
              android:layout_height="wrap_content"
              android:visibility="gone"
              app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:src="@drawable/send_icon"
            app:layout_constraintBottom_toTopOf="@+id/search_bottom_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="8dp"
            android:visibility="gone"
            android:alpha="0.9"
            android:onClick="sendSelectedSearchedFiles"
            android:id="@+id/send_searched_file_button"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>