<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        tools:context=".ConnectionCheck">

    <TextView
            android:text="WLAN connection required"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/font_size_medium"
            android:textColor="@color/colorBlue"
            android:id="@+id/connection_info" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button android:layout_width="200dp"
            android:text="Create Network"
            android:layout_gravity="center"
            android:id="@+id/hotspot_button"
            android:background="@drawable/item_background_select"
            android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:text="@string/create_network_info"
              android:layout_gravity="center"
              android:gravity="center"
              android:id="@+id/create_hotspot_info"
              android:layout_height="wrap_content"/>

    <Button android:layout_width="200dp"
            android:text="Connect to Wifi"
            android:background="@drawable/item_background_select"
            android:layout_gravity="center"
            android:id="@+id/wifi_button"
            android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:text="@string/connect_wifi_info"
              android:layout_gravity="center"
              android:gravity="center"
              android:id="@+id/create_wifi_info"
              android:layout_height="wrap_content"/>

    <Button android:layout_width="200dp"
            android:id="@+id/next_button"
            android:text="Next"
            android:background="@drawable/item_background_select"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
</LinearLayout>