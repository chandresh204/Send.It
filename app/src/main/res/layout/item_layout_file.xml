<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:id="@+id/file_bar_layout"
              android:background="@drawable/item_background"
              android:layout_width="match_parent"
              android:layout_margin="5dp"
              android:layout_height="wrap_content">

    <ImageView android:layout_width="50dp"
               android:src="@drawable/file_unknown_icon_small"
               android:id="@+id/file_icon"
               android:layout_marginStart="15dp"
               android:layout_gravity="center"
               android:layout_height="50dp"/>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_margin="10dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:textColor="#000"
                android:text="file_title"
                android:id="@+id/file_title"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:text="file_path"
                android:id="@+id/file_path"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="wrap_content"
                android:id="@+id/file_prop"
                android:text="file properties"
                android:textStyle="italic"
                android:textColor="#000"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView android:layout_width="40dp"
               android:id="@+id/file_open_button"
               android:layout_gravity="center"
               android:layout_marginEnd="15dp"
               android:src="@drawable/eye_icon_tiny"
               android:layout_height="40dp"/>
</LinearLayout>